{
  "manifest_version": 2,
  "name": "Odoo Developer Mode Toggle",
  "version": "1.0",
  "description": "Toggle Odoo developer mode by modifying the URL.",
  "icons": {
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_title": "Toggle Odoo Developer Mode"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
